<Window x:Class="SistemaControlAC.View.ClienteFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaControlAC.View"
        mc:Ignorable="d"
         Title="{Binding Title}" 
        Height="650" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="#F44336"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FormCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" 
                Background="#2196F3" 
                Padding="20,15">
            <TextBlock Text="{Binding Title}" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Padding="30,20">
            <StackPanel>
                <!-- Información Personal -->
                <TextBlock Text="INFORMACIÓN PERSONAL" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="#2196F3" 
                           Margin="0,0,0,15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Nombre *" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                 Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Apellido *" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding Apellido, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                 Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- Contacto -->
                <TextBlock Text="CONTACTO" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="#2196F3" 
                           Margin="0,10,0,15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Teléfono Principal *" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                 Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Teléfono Secundario" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding TelefonoSecundario, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                 Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Email" Style="{StaticResource FormLabelStyle}"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}"/>

                <!-- Dirección -->
                <TextBlock Text="DIRECCIÓN" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="#2196F3" 
                           Margin="0,10,0,15"/>

                <TextBlock Text="Dirección *" Style="{StaticResource FormLabelStyle}"/>
                <TextBox Text="{Binding Direccion, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalContentAlignment="Top"
                         Padding="10,8"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Ciudad" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding Ciudad, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Código Postal" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding CodigoPostal, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource FormTextBoxStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- Información Adicional -->
                <TextBlock Text="INFORMACIÓN ADICIONAL" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="#2196F3" 
                           Margin="0,10,0,15"/>

                <TextBlock Text="RFC" Style="{StaticResource FormLabelStyle}"/>
                <TextBox Text="{Binding RFC, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}"/>

                <!-- Preferencias de Notificación -->
                <TextBlock Text="PREFERENCIAS DE NOTIFICACIÓN" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="#2196F3" 
                           Margin="0,10,0,15"/>

                <CheckBox Content="Recibir notificaciones por Email" 
                          IsChecked="{Binding RecibeNotificacionesEmail}" 
                          Style="{StaticResource FormCheckBoxStyle}"/>

                <CheckBox Content="Recibir notificaciones por WhatsApp" 
                          IsChecked="{Binding RecibeNotificacionesWhatsApp}" 
                          Style="{StaticResource FormCheckBoxStyle}"/>

                <!-- Estado (solo en modo edición) -->
                <CheckBox Content="Cliente Activo" 
                          IsChecked="{Binding Activo}" 
                          Style="{StaticResource FormCheckBoxStyle}"
                          Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <TextBlock Text="* Campos obligatorios" 
                           FontSize="12" 
                           Foreground="#666" 
                           FontStyle="Italic" 
                           Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Botones de acción -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" 
                Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="💾 Guardar" 
                        Command="{Binding SaveCommand}" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Background="#4CAF50" 
                        Foreground="White" 
                        BorderBrush="#4CAF50"/>
                <Button Content="🧹 Limpiar" 
                        Command="{Binding ClearCommand}" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Background="#FF9800" 
                        Foreground="White" 
                        BorderBrush="#FF9800"
                        Visibility="{Binding IsEditMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                <Button Content="❌ Cancelar" 
                        Command="{Binding CancelCommand}" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Background="#F44336" 
                        Foreground="White" 
                        BorderBrush="#F44336"/>
            </StackPanel>
        </Border>

        <!-- Indicador de carga -->
        <Grid Grid.Row="0" 
              Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White" 
                    CornerRadius="10" 
                    Padding="30" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="30" 
                                 Height="30" 
                                 Margin="0,0,15,0"/>
                    <TextBlock Text="Guardando..." 
                               VerticalAlignment="Center" 
                               FontSize="16"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
