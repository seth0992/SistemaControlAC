<Window x:Class="SistemaControlAC.View.ClienteDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaControlAC.View"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="InfoValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="Margin" Value="0,20,0,15"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" 
                Background="#2196F3" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="👤" 
                               FontSize="24" 
                               Margin="0,0,10,0" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding NombreCompleto}" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="{Binding Cliente.Activo, Converter={StaticResource BooleanToColorConverter}}" 
                            CornerRadius="12" 
                            Padding="12,6">
                        <TextBlock Text="{Binding EstadoFormateado}" 
                                   Foreground="White" 
                                   FontSize="12" 
                                   FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Información del Cliente -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">

                    <!-- Estadísticas Rápidas -->
                    <TextBlock Text="RESUMEN" Style="{StaticResource SectionHeaderStyle}"/>
                    <UniformGrid Columns="3" Margin="0,0,0,20">
                        <Border Style="{StaticResource StatCardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TotalEquipos}" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="#4CAF50" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Equipos" 
                                           FontSize="12" 
                                           Foreground="#666" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource StatCardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding EquiposActivos}" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="#2196F3" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Activos" 
                                           FontSize="12" 
                                           Foreground="#666" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource StatCardStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TotalCitas}" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="#FF9800" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Citas" 
                                           FontSize="12" 
                                           Foreground="#666" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Información Personal -->
                    <TextBlock Text="INFORMACIÓN PERSONAL" Style="{StaticResource SectionHeaderStyle}"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre:" Style="{StaticResource InfoLabelStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding NombreCompleto}" Style="{StaticResource InfoValueStyle}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Teléfono:" Style="{StaticResource InfoLabelStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TelefonoFormateado}" Style="{StaticResource InfoValueStyle}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Email:" Style="{StaticResource InfoLabelStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Cliente.Email}" Style="{StaticResource InfoValueStyle}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Registro:" Style="{StaticResource InfoLabelStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding FechaRegistroFormateada}" Style="{StaticResource InfoValueStyle}"/>
                    </Grid>

                    <!-- Dirección -->
                    <TextBlock Text="DIRECCIÓN" Style="{StaticResource SectionHeaderStyle}"/>
                    <TextBlock Text="{Binding DireccionCompleta}" 
                               Style="{StaticResource InfoValueStyle}" 
                               Margin="0,0,0,20"/>

                    <!-- Notas -->
                    <TextBlock Text="NOTAS" Style="{StaticResource SectionHeaderStyle}"/>
                    <TextBlock Text="{Binding NotasFormateadas}" 
                               Style="{StaticResource InfoValueStyle}"/>
                </StackPanel>

                <!-- Equipos y Citas -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">

                    <!-- Equipos -->
                    <TextBlock Text="EQUIPOS" Style="{StaticResource SectionHeaderStyle}"/>
                    <ListView ItemsSource="{Binding Equipos}" 
                              Height="200" 
                              Margin="0,0,0,20">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" 
                                        BorderBrush="#E0E0E0" 
                                        BorderThickness="1" 
                                        CornerRadius="5" 
                                        Padding="10" 
                                        Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Marca}" 
                                                       FontWeight="Bold" 
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding Modelo}" 
                                                       Foreground="#666" 
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding Ubicacion}" 
                                                       Foreground="#666" 
                                                       FontSize="12"/>
                                        </StackPanel>

                                        <Border Grid.Column="1" 
                                                Background="{Binding Activo, Converter={StaticResource BooleanToColorConverter}}" 
                                                CornerRadius="8" 
                                                Padding="8,4">
                                            <TextBlock Text="{Binding Activo, Converter={StaticResource BooleanToStatusConverter}}" 
                                                       Foreground="White" 
                                                       FontSize="10" 
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Citas Recientes -->
                    <TextBlock Text="CITAS RECIENTES" Style="{StaticResource SectionHeaderStyle}"/>
                    <ListView ItemsSource="{Binding Citas}" 
                              Height="200">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" 
                                        BorderBrush="#E0E0E0" 
                                        BorderThickness="1" 
                                        CornerRadius="5" 
                                        Padding="10" 
                                        Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding TipoServicio}" 
                                                       FontWeight="Bold" 
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding FechaProgramada, StringFormat=dd/MM/yyyy HH:mm}" 
                                                       Foreground="#666" 
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding Descripcion}" 
                                                       Foreground="#666" 
                                                       FontSize="12" 
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <Border Grid.Column="1" 
                                                Background="{Binding Estado, Converter={StaticResource StatusToColorConverter}}" 
                                                CornerRadius="8" 
                                                Padding="8,4">
                                            <TextBlock Text="{Binding Estado}" 
                                                       Foreground="White" 
                                                       FontSize="10" 
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Botones de acción -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" 
                Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="✏️ Editar Cliente" 
                        Command="{Binding EditClienteCommand}" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Background="#FF9800" 
                        Foreground="White" 
                        BorderBrush="#FF9800"/>
                <Button Content="🖨️ Imprimir" 
                        Command="{Binding PrintCommand}" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Background="#607D8B" 
                        Foreground="White" 
                        BorderBrush="#607D8B"/>
                <Button Content="🔄 Actualizar" 
                        Command="{Binding RefreshCommand}" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Background="#4CAF50" 
                        Foreground="White" 
                        BorderBrush="#4CAF50"/>
                <Button Content="❌ Cerrar" 
                        Command="{Binding CloseCommand}" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Background="#F44336" 
                        Foreground="White" 
                        BorderBrush="#F44336"/>
            </StackPanel>
        </Border>

        <!-- Indicador de carga -->
        <Grid Grid.Row="0" 
              Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White" 
                    CornerRadius="10" 
                    Padding="30" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="30" 
                                 Height="30" 
                                 Margin="0,0,15,0"/>
                    <TextBlock Text="Cargando..." 
                               VerticalAlignment="Center" 
                               FontSize="16"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>