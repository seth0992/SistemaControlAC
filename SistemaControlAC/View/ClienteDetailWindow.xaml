<Window x:Class="SistemaControlAC.View.ClienteDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SistemaControlAC.View"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="800" 
        Width="1100"
        WindowStartupLocation="CenterOwner"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <materialDesign:DialogHost Identifier="ClienteDetailDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Encabezado del cliente -->
            <materialDesign:ColorZone Grid.Row="0" 
                                      Mode="PrimaryMid"
                                      materialDesign:ElevationAssist.Elevation="Dp4">
                <Grid Height="120" Margin="32,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Avatar del cliente -->
                    <Border Grid.Column="0" 
                            Background="White"
                            Width="80" Height="80"
                            CornerRadius="40"
                            VerticalAlignment="Center"
                            Margin="0,0,24,0">
                        <TextBlock Text="{Binding Cliente.Nombre}"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Información principal -->
                    <StackPanel Grid.Column="1" 
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding NombreCompleto}" 
                                   FontSize="24" 
                                   FontWeight="Medium" 
                                   Foreground="White"
                                   Margin="0,0,0,4"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Phone" 
                                                     Width="16" Height="16"
                                                     Foreground="#B3E5FC"
                                                     Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding TelefonoFormateado}" 
                                       Foreground="#B3E5FC"
                                       FontSize="14"/>

                            <materialDesign:PackIcon Kind="Email" 
                                                     Width="16" Height="16"
                                                     Foreground="#B3E5FC"
                                                     Margin="24,0,8,0"/>
                            <TextBlock Text="{Binding Cliente.Email}" 
                                       Foreground="#B3E5FC"
                                       FontSize="14"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="MapMarker" 
                                                     Width="16" Height="16"
                                                     Foreground="#B3E5FC"
                                                     Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding DireccionCompleta}" 
                                       Foreground="#B3E5FC"
                                       FontSize="14"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="400"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Estado y acciones -->
                    <StackPanel Grid.Column="2" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right">
                        <materialDesign:Chip Content="{Binding EstadoFormateado}"
                                             IconBackground="{Binding Cliente.Activo, Converter={StaticResource BooleanToColorConverter}}"
                                             IconForeground="White"
                                             Margin="0,0,0,16">
                            <materialDesign:Chip.Icon>
                                <materialDesign:PackIcon Kind="CheckCircle" />
                            </materialDesign:Chip.Icon>
                        </materialDesign:Chip>

                        <TextBlock Text="{Binding FechaRegistroFormateada, StringFormat='Cliente desde: {0}'}" 
                                   Foreground="#B3E5FC"
                                   FontSize="12"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Contenido principal -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          Padding="32,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Columna izquierda -->
                    <StackPanel Grid.Column="0">
                        <!-- Estadísticas rápidas -->
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2" 
                                             Margin="0,0,0,24">
                            <StackPanel Margin="24">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <materialDesign:PackIcon Kind="ChartBox" 
                                                             Width="24" Height="24"
                                                             Foreground="{StaticResource PrimaryBrush}"
                                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="RESUMEN" 
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>

                                <UniformGrid Columns="3">
                                    <!-- Total Equipos -->
                                    <Border Background="{StaticResource AccentBrush}"
                                            CornerRadius="8"
                                            Padding="16,12"
                                            Margin="0,0,4,0">
                                        <StackPanel HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="AirConditioner"
                                                                     Width="24" Height="24"
                                                                     Foreground="White"
                                                                     HorizontalAlignment="Center"
                                                                     Margin="0,0,0,8"/>
                                            <TextBlock Text="{Binding TotalEquipos}" 
                                                       FontSize="24" 
                                                       FontWeight="Bold" 
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Equipos" 
                                                       FontSize="12" 
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Equipos Activos -->
                                    <Border Background="{StaticResource PrimaryBrush}"
                                            CornerRadius="8"
                                            Padding="16,12"
                                            Margin="4,0,4,0">
                                        <StackPanel HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="CheckCircle"
                                                                     Width="24" Height="24"
                                                                     Foreground="White"
                                                                     HorizontalAlignment="Center"
                                                                     Margin="0,0,0,8"/>
                                            <TextBlock Text="{Binding EquiposActivos}" 
                                                       FontSize="24" 
                                                       FontWeight="Bold" 
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Activos" 
                                                       FontSize="12" 
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Total Citas -->
                                    <Border Background="{StaticResource WarningBrush}"
                                            CornerRadius="8"
                                            Padding="16,12"
                                            Margin="4,0,0,0">
                                        <StackPanel HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Calendar"
                                                                     Width="24" Height="24"
                                                                     Foreground="White"
                                                                     HorizontalAlignment="Center"
                                                                     Margin="0,0,0,8"/>
                                            <TextBlock Text="{Binding TotalCitas}" 
                                                       FontSize="24" 
                                                       FontWeight="Bold" 
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Citas" 
                                                       FontSize="12" 
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </UniformGrid>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Información de contacto -->
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2" 
                                             Margin="0,0,0,24">
                            <StackPanel Margin="24">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <materialDesign:PackIcon Kind="ContactMail" 
                                                             Width="24" Height="24"
                                                             Foreground="{StaticResource PrimaryBrush}"
                                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="INFORMACIÓN DE CONTACTO" 
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>

                                <StackPanel>
                                    <!-- Teléfonos -->
                                    <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                            CornerRadius="4"
                                            Padding="16,12"
                                            Margin="0,0,0,12">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Phone" 
                                                                     Width="20" Height="20"
                                                                     Foreground="{StaticResource PrimaryBrush}"
                                                                     Margin="0,0,12,0"/>
                                            <StackPanel>
                                                <TextBlock Text="Teléfono Principal"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                <TextBlock Text="{Binding TelefonoFormateado}"
                                                           FontWeight="Medium"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- Email -->
                                    <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                            CornerRadius="4"
                                            Padding="16,12"
                                            Margin="0,0,0,12">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Email" 
                                                                     Width="20" Height="20"
                                                                     Foreground="{StaticResource PrimaryBrush}"
                                                                     Margin="0,0,12,0"/>
                                            <StackPanel>
                                                <TextBlock Text="Correo Electrónico"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                <TextBlock Text="{Binding Cliente.Email}"
                                                           FontWeight="Medium"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- Dirección -->
                                    <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                            CornerRadius="4"
                                            Padding="16,12">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="MapMarker" 
                                                                     Width="20" Height="20"
                                                                     Foreground="{StaticResource PrimaryBrush}"
                                                                     Margin="0,0,12,0"/>
                                            <StackPanel>
                                                <TextBlock Text="Dirección"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                <TextBlock Text="{Binding DireccionCompleta}"
                                                           FontWeight="Medium"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Notas -->
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2">
                            <StackPanel Margin="24">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <materialDesign:PackIcon Kind="NoteText" 
                                                             Width="24" Height="24"
                                                             Foreground="{StaticResource PrimaryBrush}"
                                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="NOTAS ADICIONALES" 
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>

                                <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                        CornerRadius="4"
                                        Padding="16"
                                        MinHeight="60">
                                    <TextBlock Text="{Binding NotasFormateadas}"
                                               TextWrapping="Wrap"/>
                                </Border>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>

                    <!-- Columna derecha -->
                    <StackPanel Grid.Column="2">
                        <!-- Equipos -->
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2" 
                                             Margin="0,0,0,24">
                            <StackPanel Margin="24">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <materialDesign:PackIcon Kind="AirConditioner" 
                                                             Width="24" Height="24"
                                                             Foreground="{StaticResource PrimaryBrush}"
                                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="EQUIPOS" 
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>

                                <ScrollViewer Height="250" 
                                              VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding Equipos}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <materialDesign:Card Margin="0,0,0,12"
                                                                     materialDesign:ElevationAssist.Elevation="Dp1">
                                                    <Grid Margin="16">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <materialDesign:PackIcon Grid.Column="0"
                                                                                 Kind="AirConditioner" 
                                                                                 Width="32" Height="32"
                                                                                 Foreground="{StaticResource AccentBrush}"
                                                                                 Margin="0,0,12,0"/>

                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Marca}" 
                                                                       FontWeight="Medium" 
                                                                       FontSize="14"/>
                                                            <TextBlock Text="{Binding Modelo}" 
                                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                       FontSize="13"/>
                                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                                <materialDesign:PackIcon Kind="MapMarker" 
                                                                                         Width="12" Height="12"
                                                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                                         Margin="0,0,4,0"/>
                                                                <TextBlock Text="{Binding Ubicacion}" 
                                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                           FontSize="12"/>
                                                            </StackPanel>
                                                        </StackPanel>

                                                        <materialDesign:Chip Grid.Column="2"
                                                                             Content="{Binding Activo, Converter={StaticResource BooleanToStatusConverter}}"
                                                                             IconBackground="{Binding Activo, Converter={StaticResource BooleanToColorConverter}}"
                                                                             IconForeground="White"
                                                                             FontSize="10">
                                                            <materialDesign:Chip.Icon>
                                                                <materialDesign:PackIcon Kind="CheckCircle" />
                                                            </materialDesign:Chip.Icon>
                                                        </materialDesign:Chip>
                                                    </Grid>
                                                </materialDesign:Card>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <!-- Mensaje cuando no hay equipos -->
                                <StackPanel Visibility="{Binding TotalEquipos, Converter={x:Static local:CountToVisibilityConverter.Instance}}"
                                            HorizontalAlignment="Center"
                                            Margin="0,40,0,0">
                                    <materialDesign:PackIcon Kind="AirConditioner" 
                                                             Width="48" Height="48"
                                                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Sin equipos registrados"
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               HorizontalAlignment="Center"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Citas recientes -->
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2">
                            <StackPanel Margin="24">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <materialDesign:PackIcon Kind="Calendar" 
                                                             Width="24" Height="24"
                                                             Foreground="{StaticResource PrimaryBrush}"
                                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="CITAS RECIENTES" 
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>

                                <ScrollViewer Height="250" 
                                              VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding Citas}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <materialDesign:Card Margin="0,0,0,12"
                                                                     materialDesign:ElevationAssist.Elevation="Dp1">
                                                    <Grid Margin="16">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Border Grid.Column="0"
                                                                Background="{StaticResource PrimaryLightBrush}"
                                                                Width="40" Height="40"
                                                                CornerRadius="20"
                                                                Margin="0,0,12,0">
                                                            <materialDesign:PackIcon Kind="Calendar" 
                                                                                     Width="20" Height="20"
                                                                                     Foreground="White"
                                                                                     HorizontalAlignment="Center"
                                                                                     VerticalAlignment="Center"/>
                                                        </Border>

                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding TipoServicio}" 
                                                                       FontWeight="Medium" 
                                                                       FontSize="14"/>
                                                            <TextBlock Text="{Binding FechaProgramada, StringFormat=dd/MM/yyyy HH:mm}" 
                                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                       FontSize="13"/>
                                                            <TextBlock Text="{Binding Descripcion}" 
                                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                       FontSize="12" 
                                                                       TextTrimming="CharacterEllipsis"
                                                                       MaxWidth="200"
                                                                       Margin="0,4,0,0"/>
                                                        </StackPanel>

                                                        <materialDesign:Chip Grid.Column="2"
                                                                             Content="{Binding Estado}"
                                                                             IconBackground="{Binding Estado, Converter={StaticResource StatusToColorConverter}}"
                                                                             IconForeground="White"
                                                                             FontSize="10">
                                                            <materialDesign:Chip.Icon>
                                                                <materialDesign:PackIcon Kind="Clock" />
                                                            </materialDesign:Chip.Icon>
                                                        </materialDesign:Chip>
                                                    </Grid>
                                                </materialDesign:Card>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <!-- Mensaje cuando no hay citas -->
                                <StackPanel Visibility="{Binding TotalCitas, Converter={x:Static local:CountToVisibilityConverter.Instance}}"
                                            HorizontalAlignment="Center"
                                            Margin="0,40,0,0">
                                    <materialDesign:PackIcon Kind="Calendar" 
                                                             Width="48" Height="48"
                                                            Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                            HorizontalAlignment="Center"/>
                                    <TextBlock Text="Sin citas programadas"
                                              Style="{StaticResource MaterialDesignBody2TextBlock}"
                                              Foreground="{DynamicResource MaterialDesignBodyLight}"
                                              HorizontalAlignment="Center"
                                              Margin="0,12,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Barra de acciones -->
            <materialDesign:ColorZone Grid.Row="2" 
                                     Mode="PrimaryLight"
                                     materialDesign:ElevationAssist.Elevation="Dp4">
                <DockPanel Height="72" Margin="32,0">
                    <!-- Información adicional -->
                    <StackPanel DockPanel.Dock="Left" 
                               VerticalAlignment="Center">
                        <TextBlock Text="{Binding Cliente.FechaRegistro, StringFormat='Cliente registrado el {0:dd/MM/yyyy}'}"
                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock Text="Última actualización hace 2 horas"
                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </StackPanel>

                    <!-- Botones de acción -->
                    <StackPanel Orientation="Horizontal" 
                               DockPanel.Dock="Right"
                               VerticalAlignment="Center">
                        <Button
                               Command="{Binding PrintCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Margin="0,0,12,0">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Printer" 
                                                            Width="18" Height="18"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="IMPRIMIR"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Button 
                               Command="{Binding RefreshCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Margin="0,0,12,0">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Refresh" 
                                                            Width="18" Height="18"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="ACTUALIZAR"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Button 
                               Command="{Binding EditClienteCommand}"
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               Margin="0,0,12,0">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Pencil" 
                                                            Width="18" Height="18"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="EDITAR CLIENTE"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Button
                               Command="{Binding CloseCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Close" 
                                                            Width="18" Height="18"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="CERRAR"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>

            <!-- Indicador de carga -->
            <Grid Grid.Row="0" 
                 Grid.RowSpan="3" 
                 Background="#80000000" 
                 Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp8"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    Padding="32">
                    <StackPanel Orientation="Horizontal">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    IsIndeterminate="True"
                                    Width="32" Height="32"
                                    Margin="0,0,16,0"/>
                        <TextBlock Text="Cargando información del cliente..."
                                  VerticalAlignment="Center"
                                  Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>