<Window x:Class="SistemaControlAC.View.EquipoDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SistemaControlAC.View"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <materialDesign:DialogHost Identifier="EquipoDetailDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Encabezado -->
            <materialDesign:ColorZone Grid.Row="0" 
                                      Mode="PrimaryMid"
                                      materialDesign:ElevationAssist.Elevation="Dp4">
                <Grid Height="100" Margin="32,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icono del equipo -->
                    <Border Grid.Column="0" 
                            Background="White"
                            Width="60" Height="60"
                            CornerRadius="30"
                            VerticalAlignment="Center"
                            Margin="0,0,24,0">
                        <materialDesign:PackIcon Kind="AirConditioner" 
                                                 Width="32" Height="32"
                                                 Foreground="{StaticResource PrimaryBrush}"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                    </Border>

                    <!-- Información principal -->
                    <StackPanel Grid.Column="1" 
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding EquipoCompleto}" 
                                   FontSize="20" 
                                   FontWeight="Medium" 
                                   Foreground="White"
                                   Margin="0,0,0,4"/>

                        <TextBlock Text="{Binding TipoFormateado}" 
                                   FontSize="16" 
                                   Foreground="#B3E5FC"
                                   Margin="0,0,0,4"/>

                        <TextBlock Text="{Binding UbicacionFormateada}" 
                                   FontSize="14" 
                                   Foreground="#B3E5FC"/>
                    </StackPanel>

                    <!-- Estado -->
                    <StackPanel Grid.Column="2" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right">
                        <materialDesign:Chip Content="{Binding EstadoFormateado}"
                                             IconBackground="{Binding Equipo.Activo, Converter={StaticResource BooleanToColorConverter}}"
                                             IconForeground="White"
                                             FontSize="14">
                            <materialDesign:Chip.Icon>
                                <materialDesign:PackIcon Kind="CheckCircle" />
                            </materialDesign:Chip.Icon>
                        </materialDesign:Chip>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Contenido principal -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          Padding="32,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Columna izquierda -->
                    <StackPanel Grid.Column="0">
                        <!-- Información del Cliente -->
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2" 
                                             Margin="0,0,0,24">
                            <StackPanel Margin="24">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <materialDesign:PackIcon Kind="Account" 
                                                             Width="24" Height="24"
                                                             Foreground="{StaticResource PrimaryBrush}"
                                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="CLIENTE PROPIETARIO" 
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>

                                <StackPanel>
                                    <TextBlock Text="{Binding ClienteNombre}" 
                                               FontSize="18" 
                                               FontWeight="Medium"
                                               Margin="0,0,0,8"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <materialDesign:PackIcon Kind="Phone" 
                                                                 Width="16" Height="16"
                                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                 Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Equipo.Cliente.Telefono}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="MapMarker" 
                                                                 Width="16" Height="16"
                                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                 Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Equipo.Cliente.Direccion}" 
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Información Técnica -->
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2">
                            <StackPanel Margin="24">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <materialDesign:PackIcon Kind="Information" 
                                                             Width="24" Height="24"
                                                             Foreground="{StaticResource PrimaryBrush}"
                                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="INFORMACIÓN TÉCNICA" 
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>

                                <StackPanel>
                                    <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                            CornerRadius="4"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <StackPanel>
                                            <TextBlock Text="Número de Serie"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            <TextBlock Text="{Binding NumeroSerieFormateado}"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                            CornerRadius="4"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <StackPanel>
                                            <TextBlock Text="Capacidad"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            <TextBlock Text="{Binding CapacidadFormateada}"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                            CornerRadius="4"
                                            Padding="12">
                                        <StackPanel>
                                            <TextBlock Text="Fecha de Instalación"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            <TextBlock Text="{Binding FechaInstalacionFormateada}"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>

                    <!-- Columna derecha -->
                    <StackPanel Grid.Column="2">
                        <!-- Especificaciones del Equipo -->
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2" 
                                             Margin="0,0,0,24">
                            <StackPanel Margin="24">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <materialDesign:PackIcon Kind="AirConditioner" 
                                                             Width="24" Height="24"
                                                             Foreground="{StaticResource PrimaryBrush}"
                                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="ESPECIFICACIONES" 
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>

                                <StackPanel>
                                    <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                            CornerRadius="4"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <StackPanel>
                                            <TextBlock Text="Marca"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            <TextBlock Text="{Binding Equipo.Marca}"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                            CornerRadius="4"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <StackPanel>
                                            <TextBlock Text="Modelo"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            <TextBlock Text="{Binding Equipo.Modelo}"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                            CornerRadius="4"
                                            Padding="12">
                                        <StackPanel>
                                            <TextBlock Text="Tipo de Equipo"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            <TextBlock Text="{Binding TipoFormateado}"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Ubicación -->
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2">
                            <StackPanel Margin="24">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <materialDesign:PackIcon Kind="MapMarker" 
                                                             Width="24" Height="24"
                                                             Foreground="{StaticResource PrimaryBrush}"
                                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="UBICACIÓN" 
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>

                                <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                        CornerRadius="4"
                                        Padding="16"
                                        MinHeight="60">
                                    <TextBlock Text="{Binding UbicacionFormateada}"
                                               TextWrapping="Wrap"
                                               FontSize="16"
                                               FontWeight="Medium"/>
                                </Border>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Barra de acciones -->
            <materialDesign:ColorZone Grid.Row="2" 
                                     Mode="Standard"
                                     materialDesign:ElevationAssist.Elevation="Dp4">
                <DockPanel Height="72" Margin="32,0" LastChildFill="False">
                    <!-- Información adicional -->
                    <StackPanel DockPanel.Dock="Left" 
                               VerticalAlignment="Center">
                        <TextBlock Text="Equipo registrado en el sistema"
                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </StackPanel>

                    <!-- Botones de acción -->
                    <StackPanel Orientation="Horizontal" 
                               DockPanel.Dock="Right"
                               VerticalAlignment="Center">
                        <Button 
                               Command="{Binding RefreshCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Margin="0,0,12,0">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Refresh" 
                                                            Width="18" Height="18"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="ACTUALIZAR"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Button 
                               Command="{Binding EditEquipoCommand}"
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               Margin="0,0,12,0">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Pencil" 
                                                            Width="18" Height="18"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="EDITAR EQUIPO"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Button
                               Command="{Binding CloseCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Close" 
                                                            Width="18" Height="18"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="CERRAR"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>

            <!-- Indicador de carga -->
            <Grid Grid.Row="0" 
                 Grid.RowSpan="3" 
                 Background="#80000000" 
                 Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp8"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    Padding="32">
                    <StackPanel Orientation="Horizontal">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    IsIndeterminate="True"
                                    Width="32" Height="32"
                                    Margin="0,0,16,0"/>
                        <TextBlock Text="Cargando información del equipo..."
                                  VerticalAlignment="Center"
                                  Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>