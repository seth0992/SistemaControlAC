<Window x:Class="SistemaControlAC.View.CitaDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SistemaControlAC.View"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <materialDesign:DialogHost Identifier="CitaDetailDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Encabezado -->
            <materialDesign:ColorZone Grid.Row="0" 
                                      Mode="PrimaryMid"
                                      materialDesign:ElevationAssist.Elevation="Dp4">
                <Grid Height="100" Margin="32,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icono de la cita -->
                    <Border Grid.Column="0" 
                            Background="White"
                            Width="60" Height="60"
                            CornerRadius="30"
                            VerticalAlignment="Center"
                            Margin="0,0,24,0">
                        <materialDesign:PackIcon Kind="Calendar" 
                                                 Width="32" Height="32"
                                                 Foreground="{StaticResource PrimaryBrush}"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                    </Border>

                    <!-- Información principal -->
                    <StackPanel Grid.Column="1" 
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding FechaFormateada}" 
                                   FontSize="20" 
                                   FontWeight="Medium" 
                                   Foreground="White"
                                   Margin="0,0,0,4"/>

                        <TextBlock Text="{Binding HorarioFormateado}" 
                                   FontSize="16" 
                                   Foreground="#B3E5FC"
                                   Margin="0,0,0,4"/>

                        <TextBlock Text="{Binding Cita.TipoServicio}" 
                                   FontSize="14" 
                                   Foreground="#B3E5FC"/>
                    </StackPanel>

                    <!-- Estado -->
                    <StackPanel Grid.Column="2" 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right">
                        <materialDesign:Chip Content="{Binding EstadoFormateado}"
                                             IconBackground="{Binding Cita.Estado, Converter={StaticResource StatusToColorConverter}}"
                                             IconForeground="White"
                                             FontSize="14">
                            <materialDesign:Chip.Icon>
                                <materialDesign:PackIcon Kind="CheckCircle" />
                            </materialDesign:Chip.Icon>
                        </materialDesign:Chip>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Contenido principal -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          Padding="32,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Columna izquierda -->
                    <StackPanel Grid.Column="0">
                        <!-- Información del Cliente -->
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2" 
                                             Margin="0,0,0,24">
                            <StackPanel Margin="24">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <materialDesign:PackIcon Kind="Account" 
                                                             Width="24" Height="24"
                                                             Foreground="{StaticResource PrimaryBrush}"
                                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="CLIENTE" 
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>

                                <StackPanel>
                                    <TextBlock Text="{Binding ClienteNombre}" 
                                               FontSize="18" 
                                               FontWeight="Medium"
                                               Margin="0,0,0,8"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <materialDesign:PackIcon Kind="Phone" 
                                                                 Width="16" Height="16"
                                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                 Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Cita.Cliente.Telefono}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <materialDesign:PackIcon Kind="Email" 
                                                                 Width="16" Height="16"
                                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                 Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Cita.Cliente.Email}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="MapMarker" 
                                                                 Width="16" Height="16"
                                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                 Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Cita.Cliente.Direccion}" 
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Información del Técnico -->
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2">
                            <StackPanel Margin="24">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <materialDesign:PackIcon Kind="AccountHardHat" 
                                                             Width="24" Height="24"
                                                             Foreground="{StaticResource PrimaryBrush}"
                                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="TÉCNICO ASIGNADO" 
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>

                                <StackPanel>
                                    <TextBlock Text="{Binding TecnicoNombre}" 
                                               FontSize="16" 
                                               FontWeight="Medium"
                                               Margin="0,0,0,8"/>

                                    <TextBlock Text="{Binding Cita.TecnicoAsignado.Email}" 
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>

                    <!-- Columna derecha -->
                    <StackPanel Grid.Column="2">
                        <!-- Detalles del Servicio -->
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2" 
                                             Margin="0,0,0,24">
                            <StackPanel Margin="24">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <materialDesign:PackIcon Kind="Tools" 
                                                             Width="24" Height="24"
                                                             Foreground="{StaticResource PrimaryBrush}"
                                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="DETALLES DEL SERVICIO" 
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>

                                <StackPanel>
                                    <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                            CornerRadius="4"
                                            Padding="12"
                                            Margin="0,0,0,12">
                                        <StackPanel>
                                            <TextBlock Text="Tipo de Servicio"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            <TextBlock Text="{Binding Cita.TipoServicio}"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                            CornerRadius="4"
                                            Padding="12"
                                            Margin="0,0,0,12">
                                        <StackPanel>
                                            <TextBlock Text="Equipo"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            <TextBlock Text="{Binding EquipoInfo}"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                            CornerRadius="4"
                                            Padding="12"
                                            Margin="0,0,0,12">
                                        <StackPanel>
                                            <TextBlock Text="Duración"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            <TextBlock Text="{Binding DuracionCalculada}"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                            CornerRadius="4"
                                            Padding="12">
                                        <StackPanel>
                                            <TextBlock Text="Costo Estimado"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            <TextBlock Text="{Binding CostoFormateado}"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Observaciones -->
                        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2">
                            <StackPanel Margin="24">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <materialDesign:PackIcon Kind="NoteText" 
                                                             Width="24" Height="24"
                                                             Foreground="{StaticResource PrimaryBrush}"
                                                             Margin="0,0,12,0"/>
                                    <TextBlock Text="OBSERVACIONES" 
                                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>

                                <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                        CornerRadius="4"
                                        Padding="16"
                                        MinHeight="80">
                                    <TextBlock Text="{Binding DescripcionFormateada}"
                                               TextWrapping="Wrap"/>
                                </Border>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Barra de acciones -->
            <materialDesign:ColorZone Grid.Row="2" 
                                     Mode="Standard"
                                     materialDesign:ElevationAssist.Elevation="Dp4">
                <DockPanel Height="72" Margin="32,0" LastChildFill="False">
                    <!-- Información adicional -->
                    <StackPanel DockPanel.Dock="Left" 
                               VerticalAlignment="Center">
                        <TextBlock Text="{Binding Cita.FechaCreacion, StringFormat='Cita creada el {0:dd/MM/yyyy HH:mm}'}"
                                  Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </StackPanel>

                    <!-- Botones de acción -->
                    <StackPanel Orientation="Horizontal" 
                               DockPanel.Dock="Right"
                               VerticalAlignment="Center">
                        <Button 
                               Command="{Binding CompletarCitaCommand}"
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               Background="{StaticResource SuccessBrush}"
                               Margin="0,0,12,0">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CheckCircle" 
                                                            Width="18" Height="18"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="COMPLETAR"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Button 
                               Command="{Binding CancelarCitaCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               BorderBrush="{StaticResource ErrorBrush}"
                               Foreground="{StaticResource ErrorBrush}"
                               Margin="0,0,12,0">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Cancel" 
                                                            Width="18" Height="18"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="CANCELAR"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Button 
                               Command="{Binding EditCitaCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Margin="0,0,12,0">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Pencil" 
                                                            Width="18" Height="18"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="EDITAR"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Button
                               Command="{Binding CloseCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Close" 
                                                            Width="18" Height="18"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="CERRAR"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>
        </Grid>
    </materialDesign:DialogHost>
</Window>