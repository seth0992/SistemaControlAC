<Window x:Class="SistemaControlAC.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SistemaControlAC.View"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="650" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.8"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                              From="0,50,0,0" To="0,0,0,0" Duration="0:0:0.8"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInStoryboard}"/>
        </EventTrigger>
    </Window.Triggers>

    <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp8" 
                         Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header con gradiente y logo -->
            <Border Grid.Row="0" 
                    CornerRadius="4,4,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                        <GradientStop Color="{StaticResource Primary700}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <!-- Botón cerrar -->
                    <Button HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="16"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource MaterialDesignToolButton}"
                            Foreground="White"
                            Width="32" Height="32">
                        <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                    </Button>

                    <!-- Logo y título centrados -->
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center">
                        <Ellipse Width="80" Height="80" 
                                 Fill="White" 
                                 Margin="0,0,0,16">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="Black" 
                                                  Opacity="0.3" 
                                                  ShadowDepth="2" 
                                                  BlurRadius="8"/>
                            </Ellipse.Effect>
                        </Ellipse>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,-60,0,0">
                            <materialDesign:PackIcon Kind="AirConditioner" 
                                                     Width="32" Height="32"
                                                     Foreground="{StaticResource PrimaryBrush}"/>
                            <TextBlock Text="AC" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </StackPanel>

                        <TextBlock Text="Sistema Control AC"
                                   FontSize="20"
                                   FontWeight="Medium"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,16,0,0"/>

                        <TextBlock Text="Gestión Profesional de Aires Acondicionados"
                                   FontSize="14"
                                   Foreground="#B3E5FC"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Formulario de login -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="32,24" Margin="13,10,10,0">
                <StackPanel>
                    <!-- Título del formulario -->
                    <TextBlock Text="Iniciar Sesión"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Ingrese sus credenciales para continuar"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource MaterialDesignBodyLight}"
                               Margin="0,0,0,32"/>

                    <!-- Campo Usuario -->
                    <TextBox materialDesign:HintAssist.Hint="Usuario"
                             materialDesign:HintAssist.IsFloating="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,16"
                             FontSize="16">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Tab" Command="{Binding FocusPasswordCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- Campo Contraseña -->
                    <PasswordBox x:Name="PasswordBox"
                                 materialDesign:HintAssist.Hint="Contraseña"
                                 materialDesign:HintAssist.IsFloating="True"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 Margin="0,0,0,16"
                                 FontSize="16">
                        <PasswordBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                        </PasswordBox.InputBindings>
                    </PasswordBox>

                    <!-- Recordar usuario -->
                    <CheckBox Content="Recordar usuario"
                              IsChecked="{Binding RememberMe}"
                              Style="{StaticResource MaterialDesignCheckBox}"
                              Margin="0,0,0,24"/>

                    <!-- Mensaje de error -->
                    <Border x:Name="ErrorMessageBorder"
                            Background="{StaticResource ErrorBrush}"
                            CornerRadius="4"
                            Padding="16,12"
                            Margin="0,0,0,16"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AlertCircle"
                                                     Width="20" Height="20"
                                                     Foreground="White"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,8,0"/>
                            <TextBlock x:Name="ErrorMessageTextBlock"
                                       Text="{Binding ErrorMessage}"
                                       Foreground="White"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Botón de login -->
                    <Button x:Name="LoginButton"
                            Content="INICIAR SESIÓN"
                            Command="{Binding LoginCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Height="48"
                            Margin="0,0,0,16"
                            IsDefault="True"
                            Background="{StaticResource PrimaryBrush}"/>

                    <!-- Indicador de carga -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Margin="0,16,0,0">
                        <ProgressBar x:Name="LoadingProgressBar"
                                     Style="{StaticResource MaterialDesignCircularProgressBar}"
                                     IsIndeterminate="True"
                                     Width="24" Height="24"
                                     Margin="0,0,12,0"/>
                        <TextBlock Text="Validando credenciales..."
                                   VerticalAlignment="Center"
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    </StackPanel>

                    <!-- Enlaces adicionales -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,24,0,0">
                        <Button Content="¿Olvidó su contraseña?"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="{StaticResource PrimaryHueMidBrush}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </materialDesign:Card>
</Window>