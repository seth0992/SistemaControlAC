<Window x:Class="SistemaControlAC.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaControlAC.View"
        mc:Ignorable="d"
          Title="{Binding Title}" 
        Height="550" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="White" 
            CornerRadius="15"
            BorderThickness="1"
            BorderBrush="#E0E0E0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Título y botón cerrar -->
            <Border Grid.Row="0" 
                    Background="#2196F3"
                    CornerRadius="15,15,0,0"
                    MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Grid Height="40">
                    <TextBlock Text="Sistema Control AC"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <Button Content="✕"
                            Command="{Binding CancelCommand}"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="16"
                            Padding="15,0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <TextBlock Text="{TemplateBinding Content}"
                                           Foreground="{TemplateBinding Foreground}"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Contenido del Login -->
            <Grid Grid.Row="1" Margin="40,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Logo o Icono -->
                <Border Grid.Row="0" 
                        Width="80" 
                        Height="80"
                        Background="#E3F2FD"
                        CornerRadius="40"
                        Margin="0,0,0,20">
                    <TextBlock Text="AC"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#2196F3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Título -->
                <TextBlock Grid.Row="1"
                           Text="Iniciar Sesión"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                <TextBlock Grid.Row="2"
                           Text="Ingrese sus credenciales"
                           FontSize="14"
                           Foreground="#666"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Usuario -->
                <StackPanel Grid.Row="3" Margin="0,0,0,15">
                    <TextBlock Text="Usuario"
                               FontSize="12"
                               Foreground="#666"
                               Margin="0,0,0,5"/>
                    <Border BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="5"
                            Height="40">
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0"
                                 Padding="10,0"
                                 VerticalContentAlignment="Center"
                                 FontSize="14"/>
                    </Border>
                </StackPanel>

                <!-- Contraseña -->
                <StackPanel Grid.Row="4" Margin="0,0,0,10">
                    <TextBlock Text="Contraseña"
                               FontSize="12"
                               Foreground="#666"
                               Margin="0,0,0,5"/>
                    <Border BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="5"
                            Height="40">
                        <PasswordBox x:Name="PasswordBox"
                                     BorderThickness="0"
                                     Padding="10,0"
                                     VerticalContentAlignment="Center"
                                     FontSize="14"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>
                    </Border>
                </StackPanel>

                <!-- Recordar usuario -->
                <CheckBox Grid.Row="5"
                          Content="Recordar usuario"
                          IsChecked="{Binding RememberMe}"
                          Foreground="#666"
                          Margin="0,0,0,20"/>

                <!-- Mensaje de error (sin convertidor) -->
                <TextBlock Grid.Row="6"
                           Name="ErrorMessageTextBlock"
                           Text="{Binding ErrorMessage}"
                           Foreground="#F44336"
                           FontSize="12"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           Visibility="Collapsed"/>

                <!-- Botón Login -->
                <Button Grid.Row="7"
                        Name="LoginButton"
                        Content="Iniciar Sesión"
                        Command="{Binding LoginCommand}"
                        Height="45"
                        Background="#2196F3"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        VerticalAlignment="Top">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2196F3"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#CCCCCC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Indicador de carga (sin convertidor) -->
                <ProgressBar Grid.Row="7"
                             Name="LoadingProgressBar"
                             IsIndeterminate="True"
                             Height="3"
                             VerticalAlignment="Bottom"
                             Visibility="Collapsed"
                             Foreground="#2196F3"/>
            </Grid>
        </Grid>
    </Border>
</Window>
