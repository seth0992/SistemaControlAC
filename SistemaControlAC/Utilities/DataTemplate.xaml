<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:vm="clr-namespace:SistemaControlAC.ViewModel"
                    xmlns:view="clr-namespace:SistemaControlAC.View">
    
    <DataTemplate DataType="{x:Type vm:HomeViewModel}">
        <view:Home />
    </DataTemplate>
    
    <!-- DataTemplate para ClienteViewModel -->
    <DataTemplate DataType="{x:Type vm:ClienteViewModel}">
        <view:ClienteView />
    </DataTemplate>

    <!-- DataTemplate para EquipoViewModel -->
    <DataTemplate DataType="{x:Type vm:EquipoViewModel}">
        <view:EquipoView />
    </DataTemplate>

</ResourceDictionary>